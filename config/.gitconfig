    email = leonard.decavele@gmail.com

[core]
    editor = nvim

[init]
    defaultBranch = main

[pull]
    rebase = false

[merge]
    tool = nvimdiff
    conflictstyle = zdiff3

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
    keepBackup = false
